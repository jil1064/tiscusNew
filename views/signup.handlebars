<html>

<head>
    <title>Tiscus - Make your time meaningful</title>
    <link rel="icon" href="">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js"></script>
    <link href="/css/standard.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Roboto:100,100italic,300,300italic,400,400italic,500,500italic,700,700italic,900,900italic&subset=latin,latin-ext,cyrillic,cyrillic-ext,greek-ext,greek,vietnamese'
          rel='stylesheet'>
</head>

<body>
    
    <img src='/img/loginBG.png' style='position: fixed; bottom: 0; left: 0; width: 100%; opacity: .4;'>

    <div class="col-sm-4"></div>
        
        <div class="col-sm-4" style="text-align: center;">
    
            <div class="signup">
                <span class='normalt' style='color: white; font-size: 30px;'>Sign Up</span>
                <br><br>
                <div class='step1'>
                    <input id='veriEmail' type="text" name="email" placeholder="email">
                    <br><br>
                    <input id='sendCode' type="button" value="Send verification code"/>
                    <br><br>
                    <input type="text" name="verify" placeholder="Insert code here">
                    <br><br>
                    <input id="verifyCode" type="button" value="Verify"/>                   
                </div>
                <form id="signupForm" oninput="validateSetup()" style='display: none;'>
                    <p id='signupEmail' style='color: white'></p>
                    <input type="text" name="password" placeholder="Set password">
                    <br><br>
                    <input type="text" name="password" placeholder="Confirm password">
                    <br><br>
                    <p style='color: white'>Select timezone:</p>
                    <select name="timezone" id="setTimezone">
                        <option value="0" selected>Pacific Time</option>
                        <option value="1">Central Time</option>
                        <option value="2">Eastern Time</option>
                    </select>
                    <br><br><input type="button" id="confirmSignup" value="Confirm"/>
                </form>        
                    <br><div id='errorHint'>Oops, the verification code<br> is not correct.</div>    
            </div>
            
        </div>
        
        <div class="col-sm-4"></div>

    
</body>
    
<style>

.signup {
    background: #5986fd;
    width: 100%;
    height: auto;
    margin-top: 10vh;
    border-radius: 5vw;
    padding: 3vw;
    box-shadow: 0 6px 10px rgb(0,0,0,.4);
}    

input[type=text] {
    border: 2px solid white;
    border-radius: 2.5vw;
    background: transparent;
    height: 45px;
    width: 220px;
    padding-left: 10px;
    color: white;
}

::placeholder {
    color: white; 
} 

input[type=button] {
    border: none;
    border-radius: 2vw;
    background: white;
    color: #5986fd;
    padding: 3px 12px;
    width: auto;
}
    
#errorHint {
    color: #5986fd; 
    background: white; 
    opacity: .75; 
    margin: 0 2.5vw; 
    padding: .5vw; 
    border-radius: 5px;
}
    


@media (max-width: 480px) {
    
    .signup {
        width: 80%;
        margin-left: 10%;
        padding: 10vw;
    }
    
    input[type=text] {
        border-radius: 10vw;
        height: 40px;
        width: 180px;
    }
    
    input[type=button] {
        border-radius: 5vw;
    }
    
    #errorHint {
        margin: 0vw;
    }

}
    
</style>
    
<script>
    
$('#sendCode').click(function(){
    $(this).prop('disabled', true);
    $(this).css('opacity', '.8');
    for (let i = 0; i < 60; i++) {
        setDelay(i);
    }
    setTimeout(function(){
        $(this).prop('disabled', false);
        $(this).val('Send verification code');
        $(this).css('opacity', '1');
    }, 60000);
}); 
    
function setDelay(i) {
  setTimeout(function(){
        var j = 60 - i;
        $('#sendCode').val('Resend after ' + j + 's');
  }, 1000*i);
}
    
$('#verifyCode').click(function(){
    //Ajax
    $('#signupEmail').html($('#veriEmail').val());
    $('.step1').hide();
    $('#signupForm').fadeIn();
}); 

    
</script>
