<script>
    
$('#sendLink').click(function(){
    $(this).prop('disabled', true);
    $(this).css('opacity', '.8');
    for (let i = 0; i < 60; i++) {
        setDelay(i);
    }
    setTimeout(function(){
        $('#sendLink').prop('disabled', false);
        $('#sendLink').val('Send link to sign up');
        $('#sendLink').css('opacity', '1');
    }, 60000);
}); 
    
function setDelay(i) {
  setTimeout(function(){
        var j = 60 - i;
        $('#sendLink').val('Resend after ' + j + 's');
  }, 1000*i);
}
    
$('#signupTrigger').click(function(){
    $('.login').hide();
    $('.sendEmail').fadeIn();
});    
    
$('#backLogin').click(function(){
    $('.sendEmail').hide();
    $('.login').fadeIn();
}); 
    
</script>
